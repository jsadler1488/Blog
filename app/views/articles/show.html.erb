<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>
<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>
<% if user_signed_in? %>
	<h2>Signed in as: <%= current_user.email %></h2>
<% else %>
	<h2>Not Signed in.</h2>
<% end %>
<h2>Comments</h2>
<%= render @article.comments %>
<h2>Add a comment:</h2>
<%= render 'comments/form'%>
<%= link_to 'Back', articles_path%> |
<%= link_to 'Edit', edit_article_path(@article)%>
