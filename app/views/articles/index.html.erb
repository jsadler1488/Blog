<h1>Listing Included Articles</h1>
<%= link_to 'New article', new_article_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>
	<% @articles.each do |article| %>
	<tr>
		<th><%= article.title %></th>
		<th><%= article.text %></th>
		<th><%= link_to 'Show', article_path(article) %></th>
		<th><%= link_to 'Edit', edit_article_path(article) %></th>
		<th><%= link_to 'Delete', article_path(article), 
								method: :delete, data: { confirm: 'Are you sure?' }%></th>
	</tr>
	<%end%>
</table>
