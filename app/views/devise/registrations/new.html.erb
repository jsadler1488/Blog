<div class="mainContent">
	<div class="signUpBlockDiv">
		<h1 class="label"><%= resource_name.capitalize %> Sign up</h1>
	</div>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<div class="mainContentPrepare">
		<%= render partial: 'layouts/personal_info', locals: {f: f} %>
		<%= render partial: 'layouts/security_info', locals: {f: f} %>

		<%= render partial: 'layouts/tos_captcha', locals: {f: f}%>
		<%= render partial: 'layouts/submit', locals: {f: f}%>
	</div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
