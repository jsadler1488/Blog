<h2><%= resource_name.capitalize %> Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, required: :true, title: "Email is required" %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, required: :true, message: "Password is required", autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", {class: 'submit'} %></div>
<% end %>

<%= render "devise/shared/links" %>
